{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "align": [
      true,
      "statements",
      "members",
      "parameters"
    ],
    "arrow-parens": false,
    "ban-types": false,
    "curly": false,
    "import-name": false,
    "interface-name": false,
    "member-access": false,
    "no-boolean-literal-compare": false,
    "no-empty-interface": false,
    "no-namespace": [
      true,
      "allow-declarations"
    ],
    "no-reference": false,
    "no-shadowed-variable": [
      true,
      {
        "class": true,
        "enum": true,
        "function": false,
        "interface": false,
        "namespace": true,
        "typeAlias": false,
        "typeParameter": false
      }
    ],
    "no-string-literal": false,
    "no-string-throw": false,
    "object-literal-key-quotes": false,
    "object-literal-sort-keys": false,
    "object-shorthand-properties-first": [
      false
    ],
    "ordered-imports": [
      true,
      {
        "grouped-imports": false,
        "import-sources-order": "lowercase-last",
        "named-imports-order": "any"
      }
    ],
    "prefer-array-literal": false,
    "prefer-for-of": false,
    "quotemark": [
      true,
      "single",
      "avoid-template",
      "avoid-escape"
    ],
    "semicolon": false,
    "strict-boolean-expressions": false,
    "trailing-comma": [
      true,
      {
        "esSpecCompliant": true,
        "multiline": {
          "arrays": "always",
          "objects": "always"
        }
      }
    ],
    "triple-equals": true,
    "variable-name": [
      true,
      "allow-pascal-case",
      "allow-leading-underscore"
    ],
    "whitespace": [
      true,
      {
        "check-separator": false
      }
    ]
  }
}
