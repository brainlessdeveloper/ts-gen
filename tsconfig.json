{
  "compilerOptions": {
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "baseUrl": "src",
    "lib": ["es6"],
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "sourceMap": false,
    "strict": true,
    "target": "es5"
  },
  "include": ["src"]
}
